<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grandParentRestaurant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_heart"
            android:contentDescription="Favorite"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivMainFood"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_food"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/grandParentRestaurant"
        app:layout_constraintEnd_toEndOf="@id/grandParentRestaurant"
        android:layout_margin="4dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/restaurantCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_card_transparent"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivMainFood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nameAddressLayout"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:alpha="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zzun Izakaya"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/tvRestaurantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1532 Rue Saint-Laurent, Montreal"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_right_arrow"
            android:contentDescription="Details"
            app:layout_constraintTop_toTopOf="@id/nameAddressLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/nameAddressLayout"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:id="@+id/infoRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/nameAddressLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDeliveryFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Fee\n$5.99"
                android:textColor="#4B8DF8"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Time\n30 min"
                android:textColor="#4B8DF8"
                android:layout_weight="1"
                android:textSize="13sp"
                android:gravity="center"/>


            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating/Review\n4.8 (200)"
                android:textColor="#4B8DF8"
                android:layout_weight="1"
                android:textSize="13sp"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>